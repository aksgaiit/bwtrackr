<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="64sp"
            android:layout_height="match_parent"
            android:contentDescription="@string/title_video_thumbnail"
            android:src="@drawable/ic_launcher" />

        <CheckBox
            android:id="@+id/row_select"
            android:layout_width="36sp"
            android:layout_height="34sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row_clickhandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:gravity="left|center"
                android:text="start"
                android:textColor="#ffcee4ae"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:gravity="center"
                android:text="dur"
                android:textColor="#ffcee4ae"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/progressContainer"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/aProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60sp"
                    android:layout_height="25sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/aProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/aProgress"
                    android:layout_centerVertical="true"
                    android:shadowColor="#000"
                    android:shadowRadius="10"
                    android:text="0.0"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageWebView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bubble" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageMapView"
                android:layout_width="0dp"
                android:layout_height="32sp"
                android:layout_weight="1"
                android:contentDescription="go to map view"
                android:src="@drawable/map_by_artdesigner" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
               >
	            <ProgressBar 
	                android:id="@+id/progressShare"
	                style="?android:attr/progressBarStyleSmall" 
	                android:visibility="gone"
	                android:layout_centerVertical="true"
	                android:layout_centerInParent="true"
	                android:layout_centerHorizontal="true"
	                android:layout_width="match_parent" 
	                android:layout_height="wrap_content" />
	            <ImageView
	                android:id="@+id/imageShare"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:contentDescription="share"
	                android:src="@android:drawable/ic_menu_share" />

	            

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>