<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/map_info_container"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/map_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="TextView"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/map_info_label_latlng"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight=".1"
                            android:background="#ffffff"
                            android:text="lat/lng"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/map_info_video_offs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:contentDescription="submit"
                    android:id="@+id/btn_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="shareMoment"
                    android:src="@android:drawable/ic_menu_share" />
            </LinearLayout>

            <VideoView
                android:id="@+id/map_info_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/if_waitBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>
